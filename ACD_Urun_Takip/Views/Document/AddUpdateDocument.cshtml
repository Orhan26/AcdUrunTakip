
@using ACD_Urun_Takip.Models;
@model DocumentInfo

@{
    ViewBag.Title = "AddUpdateDocument";
    List<CompanyInformation> SirketList = (List<CompanyInformation>)TempData["SirketList"];
}
<script src="~/assets/plugins/jquery-ui/jquery-ui.min.js"></script>
<script src="~/assets/plugins/jquery-confirm/js/jquery-confirm.js"></script>



<div class="modal fade" id="createCompanyModal" tabindex="-1" role="basic" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="border-radius:24px;">
            <div class="modal-header" style="background-color: #337ab7;border-top-right-radius: 23px;border-top-left-radius: 23px;color: white;padding: 0.5rem">
                @if (Model.DocumentName == null)
                {
                    <h4 class="modal-title">Yeni Döküman</h4>
                }
                else
                {
                    <h4 class="modal-title">Döküman Düzenle</h4>
                }
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-12">
                        <div class="form-group">
                            @if (Model.DocumentName != null)
                            {
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Dosya Yolu</label><i class="far fa-copy hover" onclick="copyToClipboard()" style="margin-left:10px"></i>
                                        <input class="form-control form-control-sm suggest" value="@Model.DocumentPath" id="copytext" disabled />
                                    </div>
                                </div>

                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Döküman Adı</label>
                                        <input class="form-control form-control-sm suggest" value="@Model.DocumentName" disabled />
                                    </div>
                                </div>
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <label>Şirket Adı</label>
                                        <input class="form-control form-control-sm suggest" value="@Model.Company.SirketAdi" disabled />
                                    </div>
                                </div>
                                <form method="post" id="frm">
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <div class="form-group">
                                                  <input type="file" name="uploadFiles" style="margin-bottom:20px;" />
                                                </div>
                                            </div>
                                            <input class="form-control form-control-sm suggest" name="date" value="@DateTime.Now" style="display:none" />
                                            <input value="@Model.DocumentId" name="id" style="display:none" />
                                            <div class="col-md-12">
                                                <div class="form-group" style="margin-top: -29px;">
                                                    <label>Şirket Adı</label><br />
                                                    <select id="SelectCompany" name="companyId" style="border-radius:5px;width:100%;height:30px;">
                                                        @foreach (var srk in SirketList)
                                                        {

                                                            <option value="@srk.SirketID">@srk.SirketAdi</option>
                                                        }
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-12">
                                                <div class="form-group" style="margin-top: -7px;">
                                                    <label>Version</label>
                                                    <input class="form-control form-control-sm suggest" name="version" value="@Model.Version" />
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="modal-footer" style="margin-bottom: -27px;padding: 0.5rem;">
                                        <button type="button" class="btn bg-gradient-danger btn-sm" data-dismiss="modal">Kapat</button>
                                        <button type="submit" class="btn bg-gradient-success btn-sm" id="btn">Kaydet</button>
                                    </div>
                                </form>
                            }
                            else
                            {
                                <form method="post" action="" id="frmm"> 
                                   <div class="col-md-12">
                                       <div class="form-group">
                                          <input  type="file"  name="uploadingFiles" />
                                       </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Şirket Adı</label><br />
                                            <select id="SelectCompany" name="id" style="border-radius:5px;width:100%;height:30px;">
                                                <option value="01">Seçiniz</option>
                                                @foreach (var srk in SirketList)
                                                {

                                                    <option value="@srk.SirketID">@srk.SirketAdi</option>
                                                }
                                            </select>
                                        </div>
                                    </div>
                                    <input class="form-control form-control-sm suggest" name="Tarih" value="@DateTime.Now" style="display:none" />
        
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <label>Version</label>
                                            <input class="form-control form-control-sm suggest" id="version" Name="version" placeholder="Version..." />
                                        </div>
                                    </div>

                                    <div class="modal-footer" style="margin-bottom: -24px;padding:0rem">
                                        <button type="button" class="btn bg-gradient-danger btn-sm" data-dismiss="modal">Kapat</button>
                                        <button type="submit" class="btn bg-gradient-success btn-sm" id="btn">Kaydet</button>
                                    </div>
                                </form>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

