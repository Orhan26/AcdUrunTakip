    <script>
        
        var tableShared;
        function DefineTable(tableName, params) {
            $('[data-toggle="tooltip"]').tooltip();
            var tbName = "#" + tableName;

            tableShared = $(tbName).DataTable({
                "ajax": params["ajax"],
                "columns":params["columns"],
                conditionalPaging: {
                    style: 'fade',
                    speed: 500
                },
                "columnDefs": [{
                    "targets": params["columnDefs"][0].targets,
                    "orderable": params["columnDefs"][0].orderable,
                    "scrollCollapse": true,
                    "scrollX": true,
                    "scrollY": true,
                }],
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.20/i18n/Turkish.json"
                },
            });

            $(tbName + ' thead tr').clone(true).appendTo(tbName + ' thead');
            $(tbName + ' thead tr:eq(1) th').each(function (i) {
                $(this).hide();
                var title = $(this).text();
                if (title == "" || title == "İndir" || title == "Önizleme" || title == "Detay" || title == "Cevap") {
                    $(this).text("");
                }

                else {
                    $(this).html('<input type="text" style="width:100%" placeholder="Search ' + title + '" />');
                    $('input', this).on('keyup change', function () {
                        if (tableShared.column(i).search() !== this.value) {
                            tableShared
                                .column(i)
                                .search(this.value)
                                .draw();
                        }
                    });
                    $("input[type=text]").hide();
                }
            });
            $(tbName).on('click', 'tr', function () {
                if (isItOver == false) {
                    if ($(this).find("td:first").children().is(':checked') == true) {
                        $(this).find("td:first").children().prop('checked', false);
                    }
                    else {
                        $(this).find("td:first").children().prop('checked', 'checked');
                    }
                }
            });
           
        }
        function DatatableSizeEdit(tbl) {
            $(window).resize(function () {
                setTimeout(function () {
                    if (!isEmpty(tbl)) {
                        tbl.columns.adjust().draw();
                    }
                }, 400);
            });
        };
        $(document).ready(function () {
            $(".nav-link").click(function () {
                setTimeout(function () {
                    if (!isEmpty(tableShared)) {
                        tableShared.columns.adjust().draw();
                    }
                }, 400);
            });
        });
    </script>


