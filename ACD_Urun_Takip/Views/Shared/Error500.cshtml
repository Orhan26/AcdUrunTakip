@using ACD_Urun_Takip.Extensions
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>ACD_Urun_Takip</title>
    <!-- Bootstrap CSS -->
    <link href="~/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="~/assets/plugins/fontawesome-free/css/all.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="~/assets/css/adminlte.min.css">
</head>
<body class="hold-transition sidebar-mini">
    <div class="wrapper">
        <div class="content-wrapper">
            <section class="content">
                <div class="error-page" style="padding-top:150px;">
                    <h2 class="headline text-danger">500</h2>
                    <div class="error-content" style="padding-top:32px;">
                        <h3><i class="fas fa-exclamation-triangle text-danger"></i> Hata! Beklenmedik bir hata oluştu.</h3>
                        <p style="padding-left:37px;">
                            <a href="@Url.Action("Index","Home")">@Html.GetLang("Return to Home Page")</a>
                        </p>
                    </div>
                </div>
            </section>
        </div>
        <footer class="main-footer">
            <strong>Copyright &copy; @DateTime.Now.Year <a href="https://www.acd.com.tr/" target="_blank">Acd Bilgi İşlem Ltd. Şti.</a></strong>
            Tüm Hakları Saklıdır.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 1.0
            </div>
        </footer>
    </div>
    <!-- ./wrapper -->
    <!-- jQuery -->
    <script src="~/assets/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="~/assets/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/assets/js/adminlte.min.js"></script>
</body>
</html>

